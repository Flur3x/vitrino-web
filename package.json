{
    "name": "vitrino",
    "version": "1.0.0",
    "description": "Local shopping experience app",
    "author": "Daniel Bischoff <danielbischoff@hotmail.com>",
    "private": true,
    "engines": {
        "node": "8.5.*",
        "npm": "5.5.*"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development npm run node-web",
        "dev-local-api": "cross-env NODE_ENV=development API_ENDPOINT=http://localhost:4000/graphql npm-run-all --parallel node-api node-web",
        "build": "nuxt build",
        "start": "cross-env NODE_ENV=production npm run node-web",
        "heroku-postbuild": "npm run build",
        "node-web": "node server/index.js",
        "node-api": "node ../vitrino-api/server/index.js",
        "generate": "nuxt generate",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "precommit": "npm run lint"
    },
    "dependencies": {
        "@nuxtjs/apollo": "^2.1.1",
        "cross-env": "^5.0.5",
        "express": "^4.16.1",
        "helmet": "^3.8.2",
        "less": "^2.7.2",
        "less-loader": "^4.0.5",
        "nuxt": "^1.0.0-rc11",
        "vue": "2.4.4",
        "vue-no-ssr": "^0.2.0",
        "vuex": "^2.5.0"
    },
    "devDependencies": {
        "babel-eslint": "^7.2.3",
        "eslint": "^4.3.0",
        "eslint-config-airbnb-base": "^12.0.2",
        "eslint-config-standard": "^10.2.1",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-html": "^3.1.1",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-node": "^5.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-standard": "^3.0.1",
        "npm-run-all": "^4.1.1"
    }
}
